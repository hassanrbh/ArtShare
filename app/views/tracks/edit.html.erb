<h1 class="page-header">EDIT <%= @track.title.upcase %></h1>

<form class="form" action="<%= tracks_path %>" method="POST">
    <%= auth_token %>
    <br />
    <p>
        <label for="albums_name">Title: </label>
        <input type="text"
               id="tracks_title"
               name="tracks[title]"
               value="<%= @track.title %>"/>
    </p>
    <br />
    <br />
    <p>
        <label for="select_bands">Albums: </label>
        <select id="select_bands" name="tracks[album_id]" class="select_controller">
            <option value="" disabled >-- ü§ñ Choose an album ‚ò†Ô∏è --</option>
            <% Album.all.each do |track_album| %>
                <option value="<%= track_album.id %>"
                <%=  "selected" if track_album.id == @track.album.id %>>
                <%= track_album.name %></option>
            <% end %>
        </select>
    </p>
    <br />
    <br />
    <p>
        <label for="ord_tracks">Ord: </label>
        <input type="number"
               id="ord_tracks"
               name="tracks[ord]"
               min="0"
               max="101"
               value="<%= @track.ord %>"/>
    </p>
    <br />
    <p>
        <label for="album_live_t">Standard</label>
        <input type="radio"
               id="album_live_t"
               name="tracks[track_type]"
               value="regular"
               <%= "checked" if @track.track_type == "regular" %>>
        <label for="album_live_f">Bonus</label>
        <input type="radio"
               id="album_live_f"
               name="tracks[track_type]"
               value="bonus"
               <%= "checked" if @track.track_type == "bonus" %>>
    </p>
    <br />
    <p>
        <label for="lyrics_track">Lyrics: </label>
        <textarea id="lyrics_track" style="color: red;"
                  name="tracks[lyrics]"
                  rows="10"
                  cols="40"
                  ><%= @track.lyrics %></textarea>
    </p>  
    <br />
    <input type="submit" class="create_button" value="Edit"/>
</form>